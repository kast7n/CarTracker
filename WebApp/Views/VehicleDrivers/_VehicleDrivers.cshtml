
@model VehicleDriversViewModel

@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="VehicleDrivers" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        
        <input type="hidden" asp-for="VehicleDriver.VehicleDriverId" />

    }



    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="VehicleDriver.StartDate" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="date" asp-for="VehicleDriver.StartDate" class="form-control" value="@Model.VehicleDriver.StartDate.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="VehicleDriver.EndDate" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="date" asp-for="VehicleDriver.EndDate" class="form-control" value="@Model.VehicleDriver.EndDate.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="VehicleDriver.DriverId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="VehicleDriver.DriverId" class="form-control">
                @if (Model.Drivers != null && Model.Drivers.Count() > 0)
                {
                    @foreach (var driver in Model.Drivers)
                    {
                        <option value="@driver.DriverId">@driver.Name</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="VehicleDriver.VehicleId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="VehicleDriver.VehicleId" class="form-control">
                @if (Model.Vehicles != null && Model.Vehicles.Count() > 0)
                {
                    @foreach (var vehicle in Model.Vehicles)
                    {
                        <option value="@vehicle.VehicleId">Model: @vehicle.VehicleModel Plate: @vehicle.PlateNumber</option>
                    }
                }
            </select>
        </div>
    </div>




    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

        <div class="col-6">
        </div>
    </div>

</form>
