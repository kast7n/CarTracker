@model Maintenance

@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="maintenance" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="MaintenanceId" />
        
        <input type="hidden" asp-for="Vehicle" />
    }

    <input type="hidden" asp-for="VehicleId" />

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="MaintenanceType" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="MaintenanceType" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="MaintenanceType"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="MaintenanceDate" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="date" asp-for="MaintenanceDate" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

        <div class="col-6">
        </div>
    </div>

</form>
