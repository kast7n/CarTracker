@model MaintenanceViewModel

@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="maintenance" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="Maintenance.MaintenanceId" />
       
    }



    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Maintenance.MaintenanceType" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Maintenance.MaintenanceType" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Maintenance.MaintenanceType"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Maintenance.MaintenanceDate" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="date" asp-for="Maintenance.MaintenanceDate" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Maintenance.VehicleId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="Maintenance.VehicleId" class="form-control">
                <option>- Please Select -</option>
                @if (Model.Vehicles != null && Model.Vehicles.Count() > 0)
                {
                    @foreach (var vehicle in Model.Vehicles)
                    {
                        <option value="@vehicle.VehicleId">Id: @vehicle.VehicleId Model: @vehicle.VehicleModel Plate: @vehicle.PlateNumber</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Maintenance.Description" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Maintenance.Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

        <div class="col-6">
        </div>
    </div>

</form>
