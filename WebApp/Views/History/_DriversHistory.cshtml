@model IEnumerable<VehicleDriver>
@if (Model != null && Model.Count() > 0)
{ 
<table class="table">
    <thead>
        <tr>
            <th>Driver Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>End Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicleDriver in Model)
        {
            <tr>
                    <td>@vehicleDriver.DriverName</td>
                    <td>@vehicleDriver.StartDate.ToString("dd/MM/yy")</td>
                    <td>
                        @if (vehicleDriver.EndDate.HasValue)
                        {
                            @vehicleDriver.EndDate.Value.ToString("dd/MM/yy")
                        }
                        else
                        {
                            @Html.Raw("Current owner")
                        }
                    </td>
                    <td><a class="btn btn-link" asp-controller="VehicleDrivers" asp-action="edit" asp-route-id="@vehicleDriver.AssignmentId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="VehicleDrivers" asp-action="delete" asp-route-id="@vehicleDriver.AssignmentId" onclick="return confirmDelete()">Delete</a></td>

                </tr>
        }
    </tbody>

</table>
}
