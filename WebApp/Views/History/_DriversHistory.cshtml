@model IEnumerable<Driver>
@if (Model != null && Model.Count() > 0)
{ 
<table class="table">
    <thead>
        <tr>
            <th>Driver Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>End Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hist in Model)
        {
            <tr>
                    <td>@hist.DriverName</td>
                    <td>@hist.StartDate.ToString("dd/MM/yy")</td>
                    <td>
                        @if (hist.EndDate.HasValue)
                        {
                            @hist.EndDate.Value.ToString("dd/MM/yy")
                        }
                        else
                        {
                            @Html.Raw("Current owner")
                        }
                    </td>
                    <td><a class="btn btn-link" asp-controller="Drivers" asp-action="edit" asp-route-id="@hist.DriverId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="Drivers" asp-action="delete" asp-route-id="@hist.DriverId" onclick="return confirmDelete()">Delete</a></td>

                </tr>
        }
    </tbody>

</table>
}
