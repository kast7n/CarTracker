@model IEnumerable<Maintenance>
@if (Model != null && Model.Count() > 0)
{ 
<table class="table">
    <thead>
        <tr>
            <th>Maintenance Type</th>
            <th>Date</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hist in Model)
        {
            <tr>
                <td>@hist.MaintenanceType</td>
                <td>@hist.MaintenanceDate.ToString("dd/MM/yy")</td>
                <td>@hist.Description</td>
                <td><a class="btn btn-link" asp-controller="maintenance" asp-action="edit" asp-route-id="@hist.MaintenanceId">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="maintenance" asp-action="delete" asp-route-id="@hist.MaintenanceId" onclick="return confirmDelete()">Delete</a></td>
            </tr>
        }
    </tbody>

</table>

}

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this category?")
        }
    </script>
}