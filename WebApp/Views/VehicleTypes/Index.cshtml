@model List<VehicleType>
@section title {
    <h3>Vehicles Types</h3>
}


@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var type in Model)
            {
                <tr>
                    <td>@type.TypeName</td>
                    <td>@type.Description</td>
                    <td><a class="btn btn-link" asp-controller="VehicleTypes" asp-action="edit" asp-route-id="@type.TypeId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="VehicleTypes" asp-action="delete" asp-route-id="@type.TypeId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
<a class="btn btn-primary" asp-controller="VehicleTypes" asp-action="add">Add</a>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this type?")
        }
    </script>
}

