@model Vehicle

@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="vehicles" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="VehicleId" />
    }


    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="VehicleModel" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="VehicleModel" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="PlateNumber" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="PlateNumber" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="NumberOfSeats" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" min="1" asp-for="NumberOfSeats" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Color" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Color" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Manufacturer" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Manufacturer" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

        <div class="col-6">
        </div>
    </div>

</form>
