@model List<Manufacturer>
@section title {
    <h3>Vehicles Manufacturers</h3>
}


@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Manufacturer</th>
                <th scope="col">Website</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manufacturer in Model)
            {
                <tr>
                    <td>@manufacturer.ManufacturerName</td>
                    <td><a href="@manufacturer.Website">WebSite</a></td>
                    <td><a class="btn btn-link" asp-controller="manufacturers" asp-action="edit" asp-route-id="@manufacturer.ManufacturerId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="manufacturers" asp-action="delete" asp-route-id="@manufacturer.ManufacturerId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
<a class="btn btn-primary" asp-controller="manufacturers" asp-action="add">Add</a>


